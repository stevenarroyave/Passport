<div class="row">
    <div class="col s12 m6 offset-m3">
        <div class="card darken-1">
            <div class="card-content red-text text-lighten-2">
                <h1 class="center-align">Sign In</h1>
                <% include ./partials/messages %>
                <div class="card-action">
                    <div class="row">
                        <form class="col s12" action="/account/signin" method="POST">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Email" id="email" name="email" type="email" />
                                </div>
                                <div class="input-field col s12">
                                    <input placeholder="Password" id="password" name="password" type="password" />
                                </div>
                                <div class="input-field col s12">
                                    <button class="btn btn-100 waves-effect waves-light " type="submit"
                                        name="action">Sign In
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="col s12">
                            <p>Don't have an acoount? <a href="/account/signup" class="black-text">Sign Up Here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>